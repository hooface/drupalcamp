<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/session_title"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/global_text_size"
            android:textColor="@color/text_dark"
            android:layout_marginLeft="@dimen/global_left_padding"
            android:layout_marginTop="@dimen/global_top_padding"
            android:layout_marginRight="@dimen/global_small_padding"
            android:layout_marginBottom="@dimen/global_small_padding">
    </TextView>

    <TextView
            android:id="@+id/session_speakers"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/global_text_size"
            android:textColor="@color/text_dark"
            android:layout_marginLeft="@dimen/global_left_padding"
            android:layout_marginRight="@dimen/global_right_padding"
            android:layout_marginBottom="@dimen/global_bottom_padding">
    </TextView>

    <include layout="@layout/separator_white" />

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/session_time"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/global_text_size"
                android:text="11u30 - 12u30"
                android:textColor="@color/text_dark"
                android:layout_marginLeft="@dimen/global_left_padding"
                android:layout_marginTop="@dimen/global_small_padding"
                android:layout_marginRight="@dimen/global_right_padding"
                android:layout_marginBottom="@dimen/global_bottom_padding"
                android:layout_centerVertical="true">

        </TextView>

        <ImageButton
                android:id="@+id/session_favorite_state"
                android:layout_width="@dimen/favorites_star"
                android:layout_height="@dimen/favorites_star"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/header_go_to_favorites"
                android:src="@drawable/favorites_session" />

    </RelativeLayout>

</LinearLayout>